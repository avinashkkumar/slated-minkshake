<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="Arithmetic Operation"
        android:textColor="#D51717"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/edA"
        android:layout_width="356dp"
        android:layout_height="84dp"
        android:ems="10"
        android:hint="Enter the value of A"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/edB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edB"
        android:layout_width="354dp"
        android:layout_height="71dp"
        android:ems="10"
        android:hint="Enter the value of B"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edA" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="160dp"
        android:layout_height="81dp"
        android:text="Addition"
        android:textColor="#C61212"
        app:layout_constraintBottom_toTopOf="@+id/btMul"
        app:layout_constraintEnd_toStartOf="@+id/btSub"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edB" />

    <Button
        android:id="@+id/btSub"
        android:layout_width="177dp"
        android:layout_height="70dp"
        android:text="Subtract"
        android:textColor="#B00D0D"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btDiv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edB"
        app:layout_constraintTop_toBottomOf="@+id/edB" />

    <Button
        android:id="@+id/btMul"
        android:layout_width="142dp"
        android:layout_height="77dp"
        android:text="Multiply"
        android:textColor="#B00D0D"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btDiv"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAdd"
        app:layout_constraintVertical_bias="0.253" />

    <Button
        android:id="@+id/btDiv"
        android:layout_width="147dp"
        android:layout_height="75dp"
        android:text="Division"
        android:textColor="#B00D0D"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btMul"
        app:layout_constraintTop_toBottomOf="@+id/btSub"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="385dp"
        android:layout_height="38dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edB" />

</androidx.constraintlayout.widget.ConstraintLayout>