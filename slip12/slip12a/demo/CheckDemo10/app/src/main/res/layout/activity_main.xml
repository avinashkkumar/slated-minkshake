<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="418dp"
        android:layout_height="59dp"
        android:text="@string/display"
        android:textSize="@dimen/mySize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <CheckBox
        android:id="@+id/cbJava"
        android:layout_width="276dp"
        android:layout_height="64dp"
        android:text="@string/java"
        android:textSize="@dimen/mySize"
        app:layout_constraintBottom_toTopOf="@+id/cbCpp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPHP" />

    <CheckBox
        android:id="@+id/cbAndroid"
        android:layout_width="286dp"
        android:layout_height="67dp"
        android:text="@string/android"
        android:textSize="@dimen/mySize"
        app:layout_constraintBottom_toTopOf="@+id/cbPHP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/cbPHP"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:text="@string/php"
        android:textSize="@dimen/mySize"
        app:layout_constraintBottom_toTopOf="@+id/cbJava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAndroid" />

    <CheckBox
        android:id="@+id/cbCpp"
        android:layout_width="262dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:text="@string/cpp"
        android:textSize="@dimen/mySize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbJava" />

    <Button
        android:id="@+id/btDisplay"
        android:layout_width="240dp"
        android:layout_height="115dp"
        android:text="@string/click"
        android:textSize="@dimen/mySize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbCpp"
        app:layout_constraintVertical_bias="0.206" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="279dp"
        android:layout_height="92dp"
        android:text="Switch"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDisplay" />

</androidx.constraintlayout.widget.ConstraintLayout>